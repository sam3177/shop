<%- include('partials/header') %>
<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field">
			<label for="">Title</label>
			<input type="text" name="blog[title]" value="<%= blog.title %>" placeholder="Title">
		</div>
		<div class="field">
			<label for="">Image</label>
			<input type="text" name="blog[image]" value="<%= blog.image %>" placeholder="Image URL">
		</div>
		<div class="field">
			<label for="">Blog Content</label>
			<textarea name="blog[body]"><%= blog.body %> </textarea>
		</div>
		<div class="field">
			<a class="ui grey basic button" href="..">Back</a>
			<input class="ui violet basic button" type="submit">
		</div>
	</form>
</div>


<%- include('partials/footer') %>