<%- include('../../partials/header') %>

    <div class="container">
        <div class="row text-center">
            <h1>Add new product do DB</h1>
            <div style="width: 40%; margin: 20px auto;">
                <form enctype="multipart/form-data" method="POST">
                    <div class="form-group">
                        <input class="form-control" value="<%= product.name %>" type="text" name="name"
                            placeholder="Name">
                        <p class="error-msg">
                            <%= errors.name %>
                        </p>
                    </div>
                    <div class="form-group">
                        <input class="form-control" value="<%= product.image %>" type="file" name="image"
                            placeholder="Image URL">

                        <p class="error-msg">
                            <%= errors.image %>
                        </p>
                    </div>

                    <div class="form-group">
                        <input class="form-control" value="<%= product.price %>" type="text" name="price"
                            placeholder="price">
                        <p class="error-msg">
                            <%= errors.price %>
                        </p>
                    </div>
                    <div class="form-group">
                        <textarea name="description" id="" placeholder="description" rows="5">
                            <%= product.description %>
                        </textarea>
                        <p class="error-msg">
                            <%= errors.description %>
                        </p>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-lg btn-success btn-block" type="submit">
                    </div>
                    <a class="btn btn-lg btn-default" href="/admin/products">Back</a>
                </form>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>