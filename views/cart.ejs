<%- include('./partials/header') %>

   <div class="row d-flex justify-content-center list-content">
      <div class="col-11 col-sm-10 col-md-8 border">
         <div class="row mt-3 d-flex justify-content-center">
            <div class="mb-3 col-11">
               <h4>Cart</h4>
            </div>
            <div class="mb-3 col-11 d-none d-lg-block border-bottom">
               <div class="row d-flex justify-content-between">
                  <div class="col-md-4">
                     <div class="card-body pb-0">
                        <h5 class="card-title text-center">
                           Name
                        </h5>
                     </div>
                  </div>
                  <div class="col-2">
                     <div class="card-body pb-0">
                        <h5 class="card-title text-center">
                           Price/Unit($)
                        </h5>
                     </div>
                  </div>
                  <div class="col-3">
                     <div class="card-body pb-0">
                        <h5 class="card-title text-center">
                           Units
                        </h5>
                     </div>
                  </div>
                  <div class="col-md-2 ">
                     <div class="card-body pb-0">
                        <h5 class="card-title text-center">
                           Total($)
                        </h5>
                     </div>
                  </div>
                  <div class="col-md-1 ">
                     <div class="card-body pb-0">
                        <h5 class="card-title">
                        </h5>
                     </div>
                  </div>
               </div>
            </div>
            <% products.forEach(product=>{ %>
               <div class="card mb-3 col-11">
                  <div class="row d-none d-lg-flex justify-content-center large-dev">
                     <div class="col-md-4">
                        <div class="card-body">
                           <h6 class="card-title mt-1 text-center">
                              <%= product.name %>
                           </h6>
                        </div>
                     </div>
                     <div class="col-2">
                        <div class="card-body">
                           <h5 class="card-title mt-1 text-center">
                              <%= product.price %>
                           </h5>
                        </div>
                     </div>
                     <div class="col-3">
                        <div class="card-body d-flex justify-content-center">
                           <form action="/cart/products/<%= product.id %>/minus" method="POST"><button
                                 class="btn btn-light">-</button>
                           </form>
                           <h5 class="card-title mb-0 mt-2 text-center product-count">
                              <%= product.count %>
                           </h5>
                           <form action="/cart/products/<%= product.id %>/plus" method="POST"><button
                                 class="btn btn-light">+</button>
                           </form>
                        </div>
                     </div>
                     <div class="col-md-2 ">
                        <div class="card-body">
                           <h5 class="card-title mt-1 text-center">
                              <%= product.price * product.count %>
                           </h5>
                        </div>
                     </div>
                     <div class="col-md-1 ">
                        <div class="pt-3 d-flex">
                           <form class="col-md-1" action="/cart/products/<%= product.id %>/remove" method="POST">
                              <button class="btn btn-outline-danger">X</button>
                           </form>
                        </div>
                     </div>
                  </div>

                  <div class="row d-flex d-lg-none justify-content-center medium-dev ">
                     <div class="col-8">
                        <div class="card-body">
                           <h6 class="card-title mt-1 text-center">
                              <%= product.name %>
                           </h6>
                        </div>
                     </div>
                     <div class="col-2">
                        <div class="card-body">
                           <h6 class="card-title mt-1 text-center">
                              $<%= product.price %>
                           </h6>
                        </div>
                     </div>
                     <div class="col-2"></div>
                     <div class="col-6">
                        <p class="text-center">Units</p>
                        <div class="card-body d-flex justify-content-center">
                           <form action="/cart/products/<%= product.id %>/minus" method="POST"><button
                                 class="btn btn-light">-</button>
                           </form>
                           <h5 class="card-title mb-0 mt-2 text-center product-count">
                              <%= product.count %>
                           </h5>
                           <form action="/cart/products/<%= product.id %>/plus" method="POST"><button
                                 class="btn btn-light">+</button>
                           </form>
                        </div>
                     </div>
                     <div class="col-3 ">
                        <p class="text-center">Total</p>
                        <div class="card-body">
                           <h5 class="card-title mt-1 text-center">
                              $<%= product.price * product.count %>
                           </h5>
                        </div>
                     </div>
                     <div class="col-3 ">
                        <div class="pt-3 d-flex">
                           <form class="col-md-1" action="/cart/products/<%= product.id %>/remove" method="POST">
                              <button class="btn btn-outline-danger">X</button>
                           </form>
                        </div>
                     </div>
                  </div>
               </div>
               <% }); %>
                  <div class="mb-3 col-11 border-top">
                     <div class="row d-flex justify-content-between">
                        <div class="col-md-4">
                           <div class="card-body pb-0">
                              <h5 class="card-title text-center">
                                 <a class="btn btn-outline-secondary" href="/">Countinue shopping</a>
                              </h5>
                           </div>
                        </div>
                        <div class="col-2">
                           <div class="card-body pb-0">
                              <h5 class="card-title text-center">
                                 <a class="btn btn-outline-success" href="/cart/checkout">Checkout</a>
                              </h5>
                           </div>
                        </div>
                        <div class="col-3">
                           <div class="card-body pb-0">
                              <h5 class="card-title text-center mt-2">
                                 Total($)
                              </h5>
                           </div>
                        </div>
                        <div class="col-md-2 ">
                           <div class="card-body pb-0">
                              <h5 class="card-title text-center mt-2">
                                 <%= total %>
                              </h5>
                           </div>
                        </div>
                        <div class="col-md-1 ">
                           <div class="card-body pb-0">
                              <h5 class="card-title">
                              </h5>
                           </div>
                        </div>
                     </div>
                  </div>
         </div>
      </div>
   </div>

   <%- include('./partials/footer') %>