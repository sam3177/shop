<%- include('./partials/header') %>

	<div class="container">
		<header class="jumbotron">
			<div class="container">
				<h1>Products list</h1>
			</div>
		</header>
		<div class="row ">
			<% products.forEach(product=>{ %>
					<div class="card col-sm-6 col-md-4 col-lg-3">
						<img class="img-thumbnail border-0" src="data:image/png;base64, <%= product.image %>" class="card-img-top" alt="<%= product.title %>">
						<div class="card-body d-flex flex-column justify-content-end text-center">
							<h5 class="card-title">
								<%= product.title %>
							</h5>
							<h5 class="card-title">$<%= product.price %>
							</h5>
							<form action="/cart/products/<%= product.id %>" method="POST">
								<button class="btn btn-primary">Add to Cart</button>
							</form>
						</div>
					</div>



				<% }) %>
		</div>
	</div>

	<%- include('./partials/footer') %>