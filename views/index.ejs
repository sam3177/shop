<%- include('./partials/header') %>

	<div class="container list-content">
		<header class="jumbotron">
			<div class="container">
				<h1>Products list</h1>
			</div>
		</header>
		<div class="row ">
			<% products.forEach(product=>{ %>
				<div class="col-sm-6 col-md-4 col-lg-3 p-1">
					<div class="card h-100">
						<img class="product-img img-thumbnail border-0" src="data:image/png;base64, <%= product.image %>"  alt="<%= product.title %>">
						<div class="card-body d-flex flex-column justify-content-end text-center">
							<h5 class="card-title">
								<%= product.name %>
							</h5>
							<h5 class="card-title">$<%= product.price %>
							</h5>
							<form action="/cart/products/<%= product.id %>" method="POST">
								<button class="btn btn-primary"><i class="fas fa-cart-plus"></i> Add to Cart</button>
							</form>
						</div>
					</div>
		</div>



				<% }) %>
		</div>
	</div>

	<%- include('./partials/footer') %>